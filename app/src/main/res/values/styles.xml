<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageLogoStyle">
        <item name="android:layout_margin">@dimen/image_padding</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@drawable/background_dark_line</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_no_image</item>
    </style>

    <style name="CardStyle" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:shadowRadius">90</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:shadowDy">-10</item>
    </style>

</resources>
